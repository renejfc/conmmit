{
  "version": "0.0.3",
  "name": "conmmit",
  "author": {
    "name": "ReneJFC",
    "url": "https://x.com/ReneJFC_"
  },
  "keywords": [
    "commit",
    "conventional commits",
    "cli",
    "git"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/renejfc/conmmit.git"
  },
  "scripts": {
    "start": "NODE_ENV=production bun ./src/index.tsx",
    "dev": "bun ./scripts/dev.ts",
    "comp": "bun ./scripts/build.ts",
    "format": "biome format ./src",
    "format:fix": "biome format ./src --write",
    "typecheck": "tsc",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint ./src --apply",
    "magic:fix": "biome check ./src --apply",
    "postinstall": "bunx lefthook install",
    "release": "bun magic:fix && changelogen --release --push --publish"
  },
  "devDependencies": {
    "@biomejs/biome": "latest",
    "@types/bun": "latest",
    "changelogen": "latest",
    "lefthook": "^1.6.5",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@clack/core": "^0.3.4",
    "is-unicode-supported": "^2.0.0",
    "picocolors": "^1.0.0"
  },
  "type": "module",
  "bin": {
    "conmmit": "./dist/conmmit.js"
  }
}